extends layout

block content
  .container
    h1= title
    // Wrapper
    #wrapper
      ul(class="nav nav-tabs list-tabs")
        li(role="presentation" class="active")
          a#show-course-list(href="#", data-list-id="courseList") Course List
        li(role="presentation")
          a#show-student-list(href="#", data-list-id="studentList") Student List
        li(role="presentation")
          a#show-dept-list(href="#", data-list-id="deptList") Department List

      // COURSE LIST
      #courseList.listPanel

        .filter
          .actionBar
            a#addCourse(href="#")
              span(class="glyphicon glyphicon-plus")
              span Add Course
          .filterBlock
            span Year:
            select(id="course-year")
                option(value="all", selected="selected") All
                option(value="2016") 2016
                option(value="2017") 2017
          .filterBlock
            span Department:
            select(id="course-dept")
                option(value="all", selected="selected") All
                option(value="CS") Computer Science
                option(value="IS") Information System

        table.table
          thead
            th ID
            th Course
            th Level
            th Department
            th Year
            th Enrolled
            th Vancancy
            th(colspan="3")
          tbody
      // /COURSE LIST

      // STUDENT LIST
      #studentList.listPanel
        .filter
          .actionBar
            a#addStudent(href="#", class="overlayLink", data-overlay="studentAdd")
              span(class="glyphicon glyphicon-plus")
              span Add Student
          .filterBlock
            span Year:
            select(id="student-course-year")
                option(value="all", selected="selected") All
                option(value="2016") 2016
                option(value="2017") 2017
          .filterBlock
            span Department:
            select(id="student-course-dept")
                option(value="all", selected="selected") All
                option(value="CS") Computer Science
                option(value="IS") Information System
          .filterBlock
            span Student Name:
            input#student-name(type="text")
            button#student-filter-trigger(type="button") Apply

        table.table
          thead
            th ID
            th Student
            th DOB
            th 
            th 
            th Enrolled Course
            th Dept
            th Year
            th Enrolled Date
            th(colspan="3")
          tbody
      // /STUDENT LIST

      // DEPT LIST
      #deptList.listPanel
        .filter
          .actionBar
            a#addDept(href="#")
              span(class="glyphicon glyphicon-plus")
              span Add Department
        table.table
          thead
            th ID
            th Course
            th Loaction
            th(colspan="3")
          tbody
      // /DEPT LIST



    // /WRAPPER
   
  // OVERLAY STUDENT ENROLLED LIST
  #studentEnrolled.overlay-black.overlay
    .overlay-black-box
      a.closeOverlay(href="#") 
        span(class="glyphicon glyphicon-remove-circle")
        span Close
      table.table
        thead
          th Student ID
          th Student Name
          th Enrolled Date
          th 
        tbody
  // /OVERLAY STUDENT ENROLLED LIST
  // ADD STUDENT ENROLLED LIST
  #studentAdd.overlay-black.overlay
    .overlay-black-box
      a.closeOverlay(href="#") 
        span(class="glyphicon glyphicon-remove-circle")
        span Close
      h3.newTitle Add New Student
      fieldset.add
        span
          input#studentID(type='text', placeholder='Student ID')
        span
          input#studentName(type='text', placeholder='Student Name')
        span
          input#studentDOB(type='text', placeholder='Date of Birth')
        
        br
        span
          button#btnAddStudent Add Student
  // /ADD STUDENT ENROLLED LIST
   
  // Select STUDENT ENROLLED LIST
  #studentEnroll.overlay-black.overlay
    .overlay-black-box
      a.closeOverlay(href="#") 
        span(class="glyphicon glyphicon-remove-circle")
        span Close
      h3#enrollTitle Enroll for 
        span.courseID
        span -
        span.courseTitle
        br
        span.deptName
        span (
        span.year
        span )
      fieldset(style="display:none")
        input#currentStudent(type="radio", value="N", name="newStudent", checked="checked") 
        label(for="currentStudent") Current
        input#newStudent(type="radio", value="Y", name="newStudent")
        label(for="newStudent") New
      fieldset.search#searchStudentForm
        span
          input#searchStudentID(type='text', placeholder='Student ID')
        span
          input#searchStudentName(type='text', placeholder='Student Name')
        span
          button#btnSearchStudent Search
      #searchStudentResult
        table.table
          thead
            th Student ID
            th Student Name
            th DOB
            th 
          tbody  
        
      fieldset#newStudentForm
        input#newStudentID(type='text', placeholder='Student ID')
        input#newStudentName(type='text', placeholder='Student Name')
        input#newStudentDOB(type='text', placeholder='Date of Birth')
      
        br
        button#btnAddStudent Add Student
      
  // /Select STUDENT ENROLLED LIST
   
